<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="?actionBarSize">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorPrimaryDark"
            android:paddingStart="@dimen/activity_vertical_margin"
            android:paddingEnd="@dimen/activity_vertical_margin"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

        <de.in.uulm.map.quartett.views.CircularImageView
                android:id="@+id/img_multiplayer_opponent_pic"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/no_picture"
                android:scaleType="fitCenter" />

        <TextView
                android:id="@+id/txt_multiplayer_turn_and_opponent_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Runde 2/10 vs. Gegner"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                android:textSize="16sp"/>

        <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        <TextView
                android:id="@+id/txt_multiplayer_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2:8"
                android:textAlignment="viewEnd"
                android:layout_gravity="center_vertical|end"
                android:textSize="18sp"/>
    </LinearLayout>
    <FrameLayout
            android:id="@+id/card_frame_multiplayer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
</LinearLayout>