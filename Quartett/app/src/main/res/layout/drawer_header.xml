<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_height"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:orientation="horizontal"
        android:background="@drawable/drawer_header_background"
        android:paddingTop="20dp"
        android:gravity="center">

    <de.in.uulm.map.quartett.views.CircularImageView
            android:id="@+id/img_drawer_profile_pic_drawer"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/no_picture"
            android:transitionName="profile_pic_transition_drawer"
            android:layout_marginStart="20dp"/>


    <TextView
            android:id="@+id/txt_drawer_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_marginStart="15dp" />

</LinearLayout>