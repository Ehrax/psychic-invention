<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="?actionBarSize"
        tools:context="de.in.uulm.map.quartett.mainmenu.MainMenuFragment"
        android:weightSum="1"
        android:background="@drawable/main_menu_car">


    <Button
            style="@style/MainMenuButtonStyle"
            android:id="@+id/btn_new_online_game"
            android:text="@string/new_online_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/btn_new_local_game" />

    <Button
            style="@style/MainMenuButtonStyle"
            android:id="@+id/btn_achievements"
            android:text="@string/achievements"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/btn_new_online_game" />

    <Button
            style="@style/MainMenuButtonStyle"
            android:id="@+id/btn_settings"
            android:text="@string/setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/btn_achievements" />

    <Button
            style="@style/MainMenuButtonStyle"
            android:id="@+id/btn_new_local_game"
            android:text="@string/new_local_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="18dp" />

</RelativeLayout>