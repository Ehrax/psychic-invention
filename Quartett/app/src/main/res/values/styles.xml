<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--enable activity transitions-->
        <item name="android:windowContentTransitions">true</item>
        <!--specify enter and exit transitions-->
        <item name="android:windowEnterTransition">@transition/fade</item>
        <item name="android:windowExitTransition">@transition/fade</item>

    </style>
    <!--style for the main menu buttons-->
    <style name="MainMenuButtonStyle" parent="android:Widget.Material.Button.Colored">
        <item name="android:textSize">18sp</item>
        <item name="android:backgroundTint">@color/colorButtonNormal</item>
        <item name="android:textColor">@color/colorButtonText</item>
    </style>

    <!--This TextView style is used for the gallery to show a black
    transparent TextView containing the DeckTitle over the Deck Image-->
    <style name="ImageTitleTextView" parent="android:Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@color/colorBlackTransparent</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/colorGalleryTitle</item>
    </style>


    <!--Style for the card attributes title-->
    <style name="TextViewCardAttributesTitle" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/colorCardAttributesBackground
        </item>
    </style>
    <!--style for the card attributes value-->
    <style name="TextViewCardAttributesValue" parent="@style/TextViewCardAttributesTitle">
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:gravity">end</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <!--In game header text view style for displaying opponents name and
    current points
     -->
    <style name="TextViewInGameHeader" parent="android:Widget.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_weight">0.6</item>
    </style>
    <style name="TextViewInGameHeaderPoints"
            parent="@style/TextViewInGameHeader">
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:layout_weight">0.4</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
